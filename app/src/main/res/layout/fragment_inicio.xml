<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/> -->

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/VpGrups"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHacerObservacionPropia"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:backgroundTint="#FFC04C"
            android:gravity="center"
            android:text="@string/pru"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnVerValoracionesPropias"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_weight="1"
            android:backgroundTint="#00D802"
            android:text="Ver Valoraciones Propias"
            android:textStyle="bold" />



    </LinearLayout>



</LinearLayout>